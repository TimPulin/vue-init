{
  "ignoreFiles": ["**/*.js"],
  "extends": "stylelint-config-sass-guidelines",
  "plugins": ["stylelint-order"],
  "rules": {
    "declaration-property-value-disallowed-list": {
      "/^border/": [""],
      "/^outline/": [""]
    },
    "selector-max-id": 1,
    "order/properties-order": [
      "position",
      "top",
      "bottom",
      "left",
      "right",
      "display",
      "flex",
      "justify-content",
      "align-items",
      "align-content",
      "align-self",
      "margin",
      "margin-top",
      "margin-bottom",
      "margin-left",
      "margin-right",
      "margin-block",
      "margin-inline",

      "padding",
      "padding-top",
      "padding-bottom",
      "padding-left",
      "padding-right",
      "padding-block",
      "padding-inline",

      "width",
      "min-width",
      "height",
      "min-height",
      "box-shadow",
      "outline",
      "outline-color",
      "border",
      "border-radius",
      "background",
      "background-color",
      "text-align",
      "vertical-align",
      "color",
      "font",
      "font-family",
      "font-size",
      "font-stretch",
      "font-style",
      "font-variant",
      "font-weight",
      "line-height",
      "z-index",
      "transform",
      "transition",
      "transition-property",
      "transition-duration",
      "transition-timing-function",
      "transition-delay"
    ]
  }
}
